{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],
    "target": "ES2022",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src/",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
